@{
    ViewData["Title"] = "Home Page";
}

<h1>Videochamada Básica</h1>

<div id="videos-container">
    <!-- Vídeo Local -->
    <div>
        <h3>Local</h3>
        <video id="local-video" playsInline autoPlay muted></video> <!-- muted para evitar feedback do áudio -->
    </div>
    
    <!-- Vídeo Remoto -->
    <div>
        <h3>Remoto</h3>
        <video id="remote-video" playsInline autoPlay></video>
        <div>
            <!-- Adicionar antes do botão Iniciar Chamada -->
            <label for="remote-peer-id">ID do Usuário Remoto:</label>
            <input type="text" id="remote-peer-id">
        </div>
    </div>
    
</div>

<!-- Controles -->
<div id="controls">
    <button id="start-call">Iniciar Chamada</button>
    <button id="end-call">Terminar Chamada</button>
    <label for="video-quality">Qualidade:</label>
    <select id="video-quality">
        <option value="low">Baixa</option>
        <option value="medium" selected>Média</option>
        <option value="high">Alta</option>
    </select>
</div>