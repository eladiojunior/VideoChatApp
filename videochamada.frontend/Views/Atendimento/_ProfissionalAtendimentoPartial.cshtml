@model ProfissionalSaudeModel
@if (Model == null)
{
    <div class="alert alert-danger">Não identificamos informações do Profissional de Saúde.</div>    
}
else
{
    <div class="card">
        <div class="card-body">
            <strong>Profissional de Saúde</strong>
            <h5 class="card-title">@Model.Nome</h5>
            <h6 class="card-subtitle mb-2 text-muted">Especialidade: <strong>@Model.Especialidade</strong></h6>
            <p class="card-text">
                <strong>E-mail: </strong> @Model.Email<br/>
                <strong>Telefone: </strong> @Model.Telefone
            </p>
        </div>
    </div>
}