@model GestorAcessoModel
@{
    ViewBag.Title = "Dashboard de Atendimentos";
}
<div class="row">
    <div class="col-12">
        <h1>Dashboard de Atendimentos</h1>
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-xl-4 d-none d-xl-block">
        <img src="~/imgs/acessoPainelGestao.png" class="img-fluid" alt="Imagem de Acesso Painel Gestão"/>
    </div>
    <div class="col-12 col-xl-8">
        <form asp-action="Acessar" asp-controller="PainelGestao" method="post">
            @await Html.PartialAsync("_MensagensPartial")
            <div class="row">
                <div class="col-12 col-sm-8 mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" required="required" placeholder="E-mail"/>
                        <label asp-for="Email" class="form-label">E-mail do gestor</label>
                    </div>
                </div>
                <div class="col-12 col-sm-4 mb-3">
                    <div class="form-floating">
                        <input name="Senha" type="password" class="form-control" required="required" placeholder="Senha de acesso"/>
                        <label for="Senha" class="form-label">Senha de acesso</label>
                    </div>
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-12 d-grid gap-2 d-md-block text-center">
                    <button class="btn btn-primary" type="submit">Acessar</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retornar</a>
                </div>
            </div>
        </form>
    </div>
</div>