@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
<!DOCTYPE html>
<html lang="pt-Br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Videochamada - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="~/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="~/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="~/favicons/manifest.json">
    <link rel="icon" href="~/favicons/favicon.ico">
    <meta name="theme-color" content="#80DBFF">
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/microsoft_signalr@3.1.9.min.js"></script>
    <script src="~/lib/peerjs/peerjs@1.4.7.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>const _contexto = "@Configuration["Videochamada:ContextoAplicacaoJavaScript"]";</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>